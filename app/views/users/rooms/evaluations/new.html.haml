.padding
  .box
    .box-header
      %h2 #{@room.name}の評価
    .box-divider.m-0
    .box-body
      .padding
        .row
          .col-sm-8.offset-sm-2
            %h5.text-center
              - if params[:referer] == "leave_room"
                .mb-1 #{@room.name}を退出しようとしています。
                .mb-5 レビュワーのスキル向上のため、ルームの評価をしましょう。
              - else
                .mb-1 #{@room.name}に参加して30日が経過しました。
                .mb-5 レビュワーのスキル向上のため、ルームの評価をしましょう。
            = form_for @evaluation, url: users_rooms_evaluations_path(@room) do |f|
              = hidden_field_tag :referer, params[:referer]
              = f.hidden_field :room_id
              = f.select_parts :speed, options: 1..5, message: "対応の迅速さを1(遅かった)〜5(早かった)で評価してください"
              = f.select_parts :quantity, options: 1..5, message: "レビューの量を1(物足りなかった)〜5(ちょうどよかった)で評価してください"
              = f.select_parts :quality, options: 1..5, message: "レビューの質を1(表面的だった)〜5(しっかり見てくれた)で評価してください"
              = f.textarea_parts :comment, message: "良かった点、気になった点を記入してください"
              .action.text-center.mb-4
                = f.submit "評価する", class: "btn btn-rounded btn-fw primary"
