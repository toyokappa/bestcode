.container
  %h2 レビューリクエスト作成
  = simple_form_for @review_req, url: pull_request_review_requests_path do |f|
    = f.hidden_field :is_open, value: true
    = f.input :name, input_html: { value: @pull.name }
    = f.input :description, input_html: { value: @pull.description }
    - pulls_collection = current_user.pull_requests.map { |pull| [pull.name, pull.id] }
    = f.input :pull_request_id, collection: pulls_collection, selected: @pull.id
    - reviewer_collection = current_user.reviewers.map { |reviewer| [reviewer.name, reviewer.id] }
    = f.input :reviewer_id, collection: reviewer_collection
    = f.button :submit, class: "btn-primary"
