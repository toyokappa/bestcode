!!!
%html
  %head
    %title Reviewhub
    = csrf_meta_tags
    = csp_meta_tag
    = webpack_assets_path("main")
    = javascript_include_tag webpack_assets_path("main.js")
  %body
    %header
      %nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
        .container
          = link_to "ReviewHub", root_path, class: "navbar-brand"
          %button.navbar-toggler{ type: "button", data: { toggle: "collapse", target: "#navbarSupportedContent" }, aria: { controls: "navbarSupportedContent", expanded: "false", label: "Toggle Navigation" } }
            = content_tag :span, "",class: "navbar-toggler-icon"
          .collapse.navbar-collapse#navbarSupportedContent
            %ul.navbar-nav.ml-md-auto
              - if user_signed_in?
                .nav-item= link_to "ルーム一覧", users_rooms_path, class: "nav-link"
                .nav-item= link_to "Myリポジトリ", users_repos_path(current_user.name), class: "nav-link"
                .nav-item= link_to "ログアウト", users_sign_out_path, method: :delete, class: "nav-link"
              - else
                .nav-item= link_to "GitHubアカウントでログイン", "/auth/github", class: "btn btn-outline-light"
    .container
      - flash.each do |message_type, message|
        = content_tag :div, class: "alert alert-#{message_type} alert-dismissible", role: "alert" do
          = message
          %button.close{ type: "button", data: { dismiss: "alert" }, aria: { label: "Close" } }
            %span{ aria: { hidden: true } } &times;
    = yield
